{
  "version": 2,
  "crons": [
    {
      "path": "/api/clear-messages",
      "schedule": "0 0 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/messages",
      "destination": "/api/messages"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}